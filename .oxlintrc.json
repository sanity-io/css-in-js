{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "unicorn",
    "typescript",
    "oxc",
    "react"
  ],
  "categories": {
    "correctness": "deny",
    "perf": "deny"
  },
  "rules": {
    "rules-of-hooks": "deny",
    "no-useless-escape": "off"
  },
  "overrides": [
    {
      "files": ["benchmarks/**/*.tsx"],
      "rules": {
        "no-children-prop": "off"
      }
    }
  ]
}
